<div class="header">
  {{#if characterName}}
    <div class="header__character-name">{{characterName}}</div>
  {{/if}}
  {{#if @partial-block}}
    <div class="header__group">
      {{> @partial-block }}
      <div class="header__sub-group">
        <div class="header__title">{{title}}</div>
      </div>
    </div>
  {{else}}
    <div class="header__sub-group">
      <div class="header__title">{{title}}</div>
    </div>
  {{/if}}
</div>
