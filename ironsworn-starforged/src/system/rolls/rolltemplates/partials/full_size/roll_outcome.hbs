<div class="roll-outcome">
    <div class="roll-outcome__{{outcome}} roll-outcome__row">
        <div class="roll-outcome__col-1">{{outcome}}</div>
        {{#if (or (is_matching outcome 'opportunity') (is_matching outcome 'strong-hit'))}}
            <div class="roll-outcome__col-2">
                {{> success_bg}}
            </div>
            <div class="roll-outcome__col-3">
                {{> success_bg}}
            </div>
        {{/if}}
        {{#if (is_matching outcome 'weak-hit')}}
            <div class="roll-outcome__col-2">
                {{#if (is_greater_or_equal (get_challenge_die dice 1) score)}}
                    {{> failBg}}
                {{else}}
                    {{> success_bg}}
                {{/if}}
            </div>
            <div class="roll-outcome__col-3">
                {{#if (is_greater_or_equal (get_challenge_die dice 2) score)}}
                    {{> failBg}}
                {{else}}
                    {{> success_bg}}
                {{/if}}
            </div>
        {{/if}}
        {{#if (or (is_matching outcome 'miss') (is_matching outcome 'complication'))}}
            <div class="roll-outcome__col-2">
                {{> failBg}}
            </div>
            <div class="roll-outcome__col-3">
                {{> failBg}}
            </div>
        {{/if}}
    </div>
</div>