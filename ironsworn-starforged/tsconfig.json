{
  "files": [],
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": true,
    "paths": {
      "@/*": ["./src/*"],
      "dataforged": ["node_modules/dataforged/dist/types/index.d.ts"]
    },
    "types": [
      "vitest/globals"
    ],
    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ]
  },
  "include": [
    "./playwright/features/steps/**/*",
    "./playwright/features/pages/**/*"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.vitest.json"
    }
  ]
}
